{
  "bsonType": "object",
  "required": [],
  "permission": {
    "read": "doc.status == 'published'",
    "create": "role == 'admin'",
    "update": "role == 'admin'",
    "delete": "role == 'admin'"
  },
  "properties": {
    "_id": {
      "bsonType": "string",
      "description": "项目唯一ID"
    },
    "name": {
      "bsonType": "string",
      "description": "项目名称"
    },
    "street": {
      "bsonType": "string",
      "description": "街道名称",
      "title": "街道"
    },
    "address": {
      "bsonType": "string",
      "description": "详细地址"
    },
	"accuratePosition":{
		"bsonType": "object",
		"description": "精确位置",
		"properties":
		{
			"longitude":
			{
				"bsonType": "double",
				"description": "经度"
			},
			"latitude":
			{
				"bsonType": "double",
				"description": "纬度"
			}
		}
	},
    "description": {
      "bsonType": "string",
      "description": "项目描述"
    },
    "district": {
      "bsonType": "string",
      "description": "城区名"
    },
    
    "status": {
      "bsonType": "string",
      "title": "发布状态",
      "enum": [
        "draft",
        "published",
        "archived"
      ],
      "defaultValue": "draft"
    },
    "LeasingArea": {
      "bsonType": "double",
      "minimum": 0,
      "maximum": 10000,
      "title": "招租面积(㎡)"
    },
    "OccupancyArea": {
      "bsonType": "double",
      "minimum": 0,
      "maximum": 10000,
      "title": "入驻面积(㎡)"
    },
    "image": {
      "bsonType": "string",
      "title": "项目照片"
    },
    "investmentStatus": {
      "bsonType": "string",
      "title": "招商状态",
      "enum": [
        "已出租",
        "招租中",
        "预保留"
      ],
      "errorMessage": "请选择有效状态"
    },
    "companies": {
      "bsonType": "array",
      "title": "入驻企业(加密)",
      "permission": {
        "read": "role == 'admin'",
        "write": "role == 'admin'"
      },
      "items": {
        "bsonType": "object",
        "properties": {
          "name": {
            "bsonType": "string",
            "description": "企业名"
          },
          "area": {
            "bsonType": "double",
            "description": "入驻面积"
          },
          "period": {
            "bsonType": "string",
            "description": "入驻时间段"
          }
        }
      }
    },
    "prices": {
      "bsonType": "array",
      "title": "租金信息(加密)",
      "permission": {
        "read": "role == 'admin'",
        "write": "role == 'admin'"
      },
      "items": {
        "bsonType": "object",
        "properties": {
          "floor": {
            "bsonType": "string",
            "description": "具体楼层"
          },
          "rent": {
            "bsonType": "double",
            "description": "租金(元/㎡/月)"
          },
          "payment": {
            "bsonType": "string",
            "description": "支付方式"
          }
        }
      }
    },
    "created_time": {
      "bsonType": "timestamp",
      "title": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}